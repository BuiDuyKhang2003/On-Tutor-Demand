@page
@model OnTutorDemand.Pages.TutorPages.TutorIndexModel

@{
    ViewData["Title"] = "Tutor Index";
}

<h1>Tutor Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Full Name
            </th>
            <th>
                Education Level
            </th>
            <th>
                Teaching Experience
            </th>
            <th>
                Teaching Grade
            </th>
            <th>
                Teaching Area
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tutors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Education)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grades)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Districts)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./TutorIndex" asp-route-pageNumber="@(Model.CurrentPage - 1)">Previous</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a asp-page="./TutorIndex" asp-route-pageNumber="@i">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./TutorIndex" asp-route-pageNumber="@(Model.CurrentPage + 1)">Next</a>
    }
</div>
