@page
@model OnTutorDemand.Pages.TutorPages.TutorIndexModel

@{
    ViewData["Title"] = "Tutor Index";
}

<h1>Tutor Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./TutorIndex" method="get" class="form-inline">
    <input type="text" name="searchString" value="@Model.CurrentFilter" placeholder="Search" class="form-control" />
    <input type="submit" value="Search" class="btn btn-primary ml-2" />
    <a asp-page="./TutorIndex" class="btn btn-secondary ml-2">Back to full List</a>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Full Name</th>
            <th>Education Level</th>
            <th>Teaching Experience</th>
            <th>Teaching Grade</th>
            <th>Teaching Area</th>
            <th>Teaching Subject</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tutors)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Education)</td>
                <td>@Html.DisplayFor(modelItem => item.Experience)</td>
                <td>@Html.DisplayFor(modelItem => item.Grades)</td>
                <td>@Html.DisplayFor(modelItem => item.Districts)</td>
                <td>@Html.DisplayFor(modelItem => item.Subjects)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination-buttons">
    <a asp-page="./RentalServiceHomePage"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.Tutors.PageIndex - 1)"
       asp-route-currentFilter="@Model.CurrentFilter"
       class="btn btn-primary @(!Model.Tutors.HasPreviousPage ? "disabled" : "")">
        Previous
    </a>
    <a asp-page="./RentalServiceHomePage"
       asp-route-sortOrder="@Model.CurrentSort"
       asp-route-pageIndex="@(Model.Tutors.PageIndex + 1)"
       asp-route-currentFilter="@Model.CurrentFilter"
       class="btn btn-primary @(!Model.Tutors.HasNextPage ? "disabled" : "")">
        Next
    </a>
</div>
@section Styles {
    <style>
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .page-link {
            padding: 10px;
            margin: 5px;
            text-decoration: none;
            color: black; /* Change this to the desired text color */
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .page-link:hover {
            background-color: #f0f0f0;
        }

        .page-link.active {
            font-weight: bold;
            background-color: #007bff; /* Change this to the desired active background color */
            color: white; /* Change this to the desired active text color */
        }
    </style>
}
