@page
@model OnTutorDemand.Pages.ShedulePages.SchedulePageForStudentModel
@{
    ViewData["Title"] = "Thời khóa biểu của khóa học";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="./css/sb-admin-2.min.css" rel="stylesheet">
    <link href="./css/site.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fc;
            margin-bottom: 60px;
        }

        .container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-top: 20px;
        }

        h1 {
            text-align: center;
            color: #4e73df;
            font-weight: 700;
            margin-bottom: 10px;
        }

        h5 {
            text-align: center;
            color: #858796;
            margin-bottom: 40px;
        }

        p, label {
            color: #5a5c69;
        }

        .description-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

            .form-actions .btn {
                margin: 0 10px;
            }

        .form-inline {
            display: flex;
            align-items: center;
        }

            .form-inline .form-control {
                margin-right: 10px;
            }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: #4e73df;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .modal-title {
            color: white;
        }

        .table {
            margin-top: 20px;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                background-color: #f8f9fc;
                color: #4e73df;
                border-bottom: 2px solid #e3e6f0;
            }

            .table td {
                border-top: 1px solid #e3e6f0;
            }

        .btn-primary {
            background-color: #4e73df;
            border: none;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
            }

        .pagination-buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination-buttons .btn {
                margin: 0 5px;
            }

        .footer {
            background-color: #f8f9fc;
            padding: 20px 0;
            text-align: center;
            color: #5a5c69;
            position: absolute;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Lớp: @Html.DisplayFor(model => model.RentalService.Tutor.Grades)</h1>
        <h5>Giáo viên: @Html.DisplayFor(model => model.RentalService.Tutor.FullName)</h5>
        <div class="description-container">
            Tên khóa học: @Html.DisplayFor(model => model.RentalService.ServiceName)
        </div>
        <div class="description-container">
            Gồm có: @Html.DisplayFor(model => model.RentalService.Description)
        </div>
        <div class="description-container">
            Giá: @Html.DisplayFor(model => model.RentalService.PricePerSession)
        </div>
        <h2 class="mt-5 text-center">Thời khóa biểu</h2>

        <form method="post" action="/YourActionUrl">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Ngày trong tuần
                            </th>
                            <th>
                                Thời gian bắt đầu
                            </th>
                            <th>
                                Thời gian kết thúc
                            </th>
                            <th>Đặt lịch</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Schedules)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DayOfWeek)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EndTime)
                                </td>
                                <td>
                                    <input type="checkbox" name="bookingCheckbox" value="@item.Id" />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary">Gửi</button>
            </div>
        </form>

        <div class="pagination-buttons">
            <a asp-page="./RentalServiceDetail"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Schedules.PageIndex - 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               class="btn btn-primary @(!Model.Schedules.HasPreviousPage ? "disabled" : "")">
                Trước
            </a>
            <a asp-page="./RentalServiceDetail"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.Schedules.PageIndex + 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               class="btn btn-primary @(!Model.Schedules.HasNextPage ? "disabled" : "")">
                Sau
            </a>
        </div>
    </div>

    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="./js/sb-admin-2.min.js"></script>
    <script src="/vendor/chart.js/Chart.min.js"></script>
    <script src="/js/demo/chart-area-demo.js"></script>
    <script src="/js/demo/chart-pie-demo.js"></script>
</body>
</html>