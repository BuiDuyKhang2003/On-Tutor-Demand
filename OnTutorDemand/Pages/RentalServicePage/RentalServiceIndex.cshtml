@page
@model OnTutorDemand.Pages.RentalServicePage.RentalServiceIndexModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="./css/sb-admin-2.min.css" rel="stylesheet">
    <link href="./css/site.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fc;
            margin-bottom: 60px;
        }

        
        .container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-top: 20px;
        }

        h1 {
            text-align: center;
            color: #4e73df;
            font-weight: 700;
            margin-bottom: 10px;
        }

        h5 {
            text-align: center;
            color: #858796;
            margin-bottom: 40px;
        }

        p, label {
            color: #5a5c69;
        }

        .description-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 20px;
        }

            .form-actions .btn {
                margin: 0 10px;
            }

        .form-inline {
            display: flex;
            align-items: center;
        }

            .form-inline .form-control {
                margin-right: 10px;
            }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: #4e73df;
            color: white;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .modal-title {
            color: white;
        }

        .table {
            margin-top: 20px;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                background-color: #f8f9fc;
                color: #4e73df;
                border-bottom: 2px solid #e3e6f0;
            }

            .table td {
                border-top: 1px solid #e3e6f0;
            }

        .btn-primary {
            background-color: #4e73df;
            border: none;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
            }

        .btn-secondary {
            background-color: #858796;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #6c757d;
            }

        .btn-info {
            background-color: #36b9cc;
            border: none;
        }

            .btn-info:hover {
                background-color: #2c9faf;
            }

        .btn-danger {
            background-color: #e74a3b;
            border: none;
        }

            .btn-danger:hover {
                background-color: #d9534f;
            }

        .pagination-buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination-buttons .btn {
                margin: 0 5px;
            }

    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Danh sách các giảng viên</h1>
        <div class="form-actions">
            <form asp-page="./RentalServiceHomePage" method="get" class="form-inline">
                <input type="text" name="searchString" value="@Model.CurrentFilter" placeholder="Tìm kiếm" class="form-control" />
                <input type="submit" value="Tìm kiếm" class="btn btn-primary ml-2" />
                <a asp-page="./RentalServiceHomePage" class="btn btn-secondary ml-2">Trở lại</a>
            </form>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RentalServices[0].Tutor.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.RentalServices[0].Tutor.Education)</th>
                        <th>@Html.DisplayNameFor(model => model.RentalServices[0].Tutor.Experience)</th>
                        <th>@Html.DisplayNameFor(model => model.RentalServices[0].Tutor.Subjects)</th>
                        <th>@Html.DisplayNameFor(model => model.RentalServices[0].Tutor.Districts)</th>
                        <th>@Html.DisplayNameFor(model => model.RentalServices[0].Tutor.Grades)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RentalServices)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.Education)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.Experience)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.Subjects)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.Districts)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.Grades)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination-buttons">
            <a asp-page="./RentalServiceHomePage"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.RentalServices.PageIndex - 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               class="btn btn-primary @(!Model.RentalServices.HasPreviousPage ? "disabled" : "")">
                Trước
            </a>
            <a asp-page="./RentalServiceHomePage"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.RentalServices.PageIndex + 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               class="btn btn-primary @(!Model.RentalServices.HasNextPage ? "disabled" : "")">
                Kế tiếp
            </a>
        </div>
    </div>

    <script src="./vendor/jquery/jquery.min.js"></script>
    <script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="./vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="./js/sb-admin-2.min.js"></script>
    <script src="/vendor/chart.js/Chart.min.js"></script>
    <script src="/js/demo/chart-area-demo.js"></script>
    <script src="/js/demo/chart-pie-demo.js"></script>
</body>