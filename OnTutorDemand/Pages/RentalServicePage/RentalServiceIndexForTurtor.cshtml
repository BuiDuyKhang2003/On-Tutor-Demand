@page
@model OnTutorDemand.Pages.RentalServicePage.RentalServiceIndexModel

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,300,400,600,700,800,900" rel="stylesheet">
    <link href="./css/sb-admin-2.min.css" rel="stylesheet">
    <link href="./css/site.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f8f9fc;
            margin-bottom: 60px;
        }

        .container {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-top: 20px;
        }

        h1 {
            text-align: center;
            color: #4e73df;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .form-actions .btn {
                margin: 0 10px;
            }

        .table {
            margin-top: 20px;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
            }

            .table th {
                background-color: #f8f9fc;
                color: #4e73df;
                border-bottom: 2px solid #e3e6f0;
            }

            .table td {
                border-top: 1px solid #e3e6f0;
            }

        .btn-primary {
            background-color: #4e73df;
            border: none;
        }

            .btn-primary:hover {
                background-color: #2e59d9;
            }

        .btn-secondary {
            background-color: #858796;
            border: none;
        }

            .btn-secondary:hover {
                background-color: #6c757d;
            }

        .pagination-buttons {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

            .pagination-buttons .btn {
                margin: 0 5px;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h1>Danh sách dịch vụ cho thuê</h1>
        <p>
            <a asp-page="/ShedulePages/RentalServiceDetail">Create Schedule</a>
        </p>
        <div class="form-actions">
            <form asp-page="./RentalServiceHomePage" method="get" class="form-inline">
                <input type="text" name="searchString" value="@Model.CurrentFilter" placeholder="Tìm kiếm" class="form-control" />
                <input type="submit" value="Tìm kiếm" class="btn btn-primary ml-2" />
                <a asp-page="./RentalServiceIndexForTurtor" class="btn btn-secondary ml-2">Trở lại</a>
            </form>
            <a asp-page="Create" class="btn btn-success">Tạo mới</a>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Mô tả</th>
                        <th>Giá mỗi buổi</th>
                        <th>Họ tên giảng viên</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.RentalServices)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.PricePerSession)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tutor.FullName)</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Chi tiết</a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="pagination-buttons">
            <a asp-page="./RentalServiceHomePage"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.RentalServices.PageIndex - 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               class="btn btn-primary @(!Model.RentalServices.HasPreviousPage ? "disabled" : "")">
                Trước
            </a>
            <a asp-page="./RentalServiceHomePage"
               asp-route-sortOrder="@Model.CurrentSort"
               asp-route-pageIndex="@(Model.RentalServices.PageIndex + 1)"
               asp-route-currentFilter="@Model.CurrentFilter"
               class="btn btn-primary @(!Model.RentalServices.HasNextPage ? "disabled" : "")">
                Kế tiếp
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
