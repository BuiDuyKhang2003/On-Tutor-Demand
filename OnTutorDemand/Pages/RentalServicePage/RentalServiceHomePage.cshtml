@model OnTutorDemand.Pages.RentalServicePage.RentalServiceHomePageModel
@{
    ViewData["Title"] = "Course Schedule";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="./vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="./css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
        <h1>H?c Toán L?p 2</h1>
        <h5>By: TinDinh</h5>
        <p>G?m có: <a>@Html.DisplayNameFor(model => model.RentalServices[0].Description)</a></p>

        <h2 class="mt-5 text-center">Weekly Schedule</h2>
        <button type="button" class="btn btn-primary mb-3 ml-auto" data-toggle="modal" data-target="#addScheduleModal">
            + Add Schedule
        </button>
        <form asp-page="./RentalServiceHomePage" method="get">
            <div class="form-actions no-color">
                <p>
                    Search: <input type="text" name="searchString" value="@Model.CurrentFilter" />
                    <input type="submit" value="Search" class="btn btn-primary" /> |
                    <a asp-page="./RentalServiceHomePage">Back to full List</a>
                </p>
            </div>
        </form>
        <!-- Add Schedule Modal -->
        <div class="modal fade" id="addScheduleModal" tabindex="-1" role="dialog" aria-labelledby="addScheduleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addScheduleModalLabel">Add New Schedule</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Schedule.RentalServiceId" class="control-label"></label>
                                <select asp-for="Schedule.RentalServiceId" class="form-control" asp-items="ViewBag.RentalServiceId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Schedule.DayOfWeek" for="dayOfWeek" class="control-label"></label>
                                <input asp-for="Schedule.DayOfWeek" class="form-control" />
                                @* <span asp-validation-for="Schedules.DayOfWeek" class="text-danger"></span> *@
                                @*  <select asp-for="Schedules.DayOfWeek" class="form-control" id="dayOfWeek" name="dayOfWeek">
                                <option value="Monday">Monday</option>
                                <option value="Tuesday">Tuesday</option>
                                <option value="Wednesday">Wednesday</option>
                                <option value="Thursday">Thursday</option>
                                <option value="Friday">Friday</option>
                                <option value="Saturday">Saturday</option>
                                <option value="Sunday">Sunday</option>
                                </select> *@
                            </div>
                            <div class="form-group">
                                <label asp-for="Schedule.StartTime" class="control-label"></label>
                                <input type="time" asp-for="Schedule.StartTime" class="form-control" />
                                <span asp-validation-for="Schedule.StartTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Schedule.EndTime" class="control-label"></label>
                                <input type="time" asp-for="Schedule.EndTime" class="form-control" />
                                <span asp-validation-for="Schedule.EndTime" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <input type="submit" value="Save Schedule" class="btn btn-primary" />
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Schedule.DayOfWeek)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Schedule.StartTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Schedule.EndTime)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Schedules)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DayOfWeek)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
<script src="./vendor/jquery/jquery.min.js"></script>
<script src="./vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="./vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="./js/sb-admin-2.min.js"></script>
<script src="/vendor/chart.js/Chart.min.js"></script>
<script src="/js/demo/chart-area-demo.js"></script>
<script src="/js/demo/chart-pie-demo.js"></script>
<script>
    function addSchedule() {
        // Thêm logic JavaScript tại đây khi cần thiết
    }
</script>
</html>
@{
    var prevDisabled = !Model.Schedules.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Schedules.HasNextPage ? "disabled" : "";
}
<a asp-page="./RentalServiceHomePage"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Schedules.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./RentalServiceHomePage"
   asp-route-sortOrder="@Model.CurrentSort"
   asp-route-pageIndex="@(Model.Schedules.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next
</a>