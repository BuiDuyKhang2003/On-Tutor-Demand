@model OnTutorDemand.Pages.RentalServicePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RentalService</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RentalService.Id" />
            <div class="form-group">
                <label asp-for="RentalService.Description" class="control-label"></label>
                <input asp-for="RentalService.Description" class="form-control" />
                <span asp-validation-for="RentalService.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalService.TutorId" class="control-label"></label>
                <select asp-for="RentalService.TutorId" class="form-control" asp-items="ViewBag.TutorId"></select>
                <span asp-validation-for="RentalService.TutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalService.PricePerSession" class="control-label"></label>
                <input asp-for="RentalService.PricePerSession" class="form-control" />
                <span asp-validation-for="RentalService.PricePerSession" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./RentalServiceIndexForTurtor">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
